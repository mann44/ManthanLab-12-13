<!DOCTYPE html>
<html>
    <head>
        <title> Edit Company </title>
    </head>
    <body>
        <h1> Edit Company </h1>
        <form action="/company/insert" method="get">
        <input type="hidden"
                id="company_id"
                name="company_id"
                value="<% company.company_id %>"
            Company name: <input
                  id = "company_name"
                  name = "company_name"
                  type= "text"
                  value="<%= company.company_name %>
            />
            <br />
            Address
            <br />
            <% for(var i=0; address_result.length > i; i++) {
                var checked = "";

                if(address_result[i].company_id != null) {
                    checked = "checked"
                }
            %>
                <input type="checkbox" name="address_id" <%= checked %> value="<%=
                address_result[i].address_id %>"> <%= address_result[i].street + ','
                + address_result[i].zip_code %>
                    <br />
                   <% } %>

                   <br />
            <input type = "submit"/>
        <form action="/company/update" method="get">
    </body>
</html>